<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <% if (errors.length > 0) { %>
            <div class="alert alert-danger">
                <% for (error of errors) { %>
                    <%= error %>
                        <br>
                        <% } %>
            </div>
            <% } %>

                <form action="/datas/<%= datas._id %>/<%= data._id %>/edit" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Category</label>
                        <input type="text" name="category" class="form-control" value="<%= data.category %>">
                    </div>
                    <div class="form-group">
                        <label>Date</label>
                        <input type="text" name="date" id="datepicker" class="form-control" value="<%= data.date %>">
                    </div>
                    <div class="form-group">
                        <label>Cost</label>
                        <input type="text" name="cost" class="form-control" value="<%= data.cost %>">
                    </div>
                    <div class="form-group">
                        <label>Picture</label>
                        <input type="file" name="upl" class="form-control">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-warning btn-lg">Update</button>
                        <a href="/datas/<%= datas._id %>" class="btn btn-lg btn-default">Back</a>
                    </div>
                </form>
    </div>
</div>
